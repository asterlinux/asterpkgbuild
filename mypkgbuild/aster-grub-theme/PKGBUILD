# Maintainer: Sahan Rasanjana <Sahan.user@gmail.com>
pkgname=aster-grub-theme
pkgver=r1.ab402af
pkgrel=1
pkgdesc='Simple dark GRUB theme'
arch=('any')
url='https://www.pling.com/p/1176413'
license=('MIT')
optdepends=('grub-customizer: GUI tool to configure GRUB')
makedepends=('git')
source=("aster-grub::git+https://github.com/asterlinux/aster-grub-theme")
sha256sums=('SKIP')

pkgver() {
  cd aster-grub
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  install -dm755 "${pkgdir}"/usr/share/grub/themes/
  install -Dm644 aster-grub/LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  cp -r --no-preserve=ownership paster-grub "${pkgdir}"/usr/share/grub/themes/
  rm -rf "${pkgdir}"/usr/share/grub/themes/aster-grub/.git
  rm "${pkgdir}"/usr/share/grub/themes/aster-grub/LICENSE
  rm "${pkgdir}"/usr/share/grub/themes/aster-grub/README.md
  rm "${pkgdir}"/usr/share/grub/themes/aster-grub/install.sh
}
